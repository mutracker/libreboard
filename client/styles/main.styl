    border-right: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}

th {
    font-weight: 700;
}

thead {
    background: #fff;
    background: linear-gradient(to bottom, #fff 0, #f0f0f0 100%);
}

tbody {
    background-color: #fff;
}

dl, dt {
    margin-bottom: 8px;
}

dd {
    margin: 0 0 16px 24px;
}

.markeddown {
    word-wrap: break-word;

    pre {
        border-radius: 3px;
        background-color: #ddd;
        overflow: auto;
        padding: 10px 12px;
        word-wrap: normal;
    }

    code {
        border-radius: 3px;
        background-color: #ddd;
        padding-left: 2px;
        padding-right: 2px;
    }

    pre code {
        padding: 0;
    }

    ul,
    ol {
        margin: 4px 0 12px 0;

        ul,
        ol {
            margin-left: 24px;
        }
    }


    ul > li {
        list-style: disc;
        margin: 0 0 8px 24px;
    }

    ol > li {
        list-style: decimal;
        margin: 0 0 8px 24px;
    }
}

.tabbed-pane-main-col .board-list li, .medium-window .board-list li {
    width: 33%;
}

.small-window .board-list li {
    width: 100%;

    a {
        margin: 0 0 8px;
    }
}

.sidebar-boards-list,
.board-list {
    margin-bottom: 16px;

    &:empty {
        display: none;
        margin: 0;
    }

    li {
        box-sizing: border-box;
        position: relative;

        &.starred .fa-star-o {
            opacity: 1;
        }
    }

    a {
        background-size: cover;
        background-position: center center;
        border-radius: 3px;
        display: block;
        font-weight: 700;
        min-height: 18px;
        padding: 8px 12px 8px 12px;
        position: relative;
        text-decoration: none;

        &.tile {
            background-size: auto;
            background-repeat: repeat;
        }
    }

    .board-list-item--add-board {
        background-color: #dbdbdb;
        color: #8c8c8c;
        font-weight: 400;
        line-height: 90px;
        text-align: center;

        &:hover {
            background-color: #ccc;
        }
    }

    .details {
        bottom: 0;
        left: 0;
        overflow: hidden;
        padding: 9px 12px;
        position: absolute;
        right: 0;
        top: 0;
    }

    .thumbnail {
        display: none;
    }

    .fa-star-o {
        bottom: 0;
        font-size: 14px;
        height: 18px;
        line-height: 18px;
        opacity: 0;
        padding: 9px 9px;
        position: absolute;
        right: 0;
        top: 0;
        transition-duration: .15s;
        transition-property: color, font-size, background;
    }

    .unread-indicator {
        background: #fff;
        border-radius: 7px;
        display: block;
        height: 12px;
        opacity: 0;
        position: absolute;
        right: 12px;
        top: 14px;
        width: 12px;
        transition-duration: .1s;
        transition-property: right, opacity;

        &.any {
            opacity: .7;
        }
    }

    .custom-image img {
        height: 18px;
        left: 12px;
        top: 15px;
        width: 18px;
    }

    .sidebar-boards-list li.starred {

        .details {
            padding-right: 36px;
        }

        .fa-star-o {
            opacity: 1;
        }

        &.has-unread-activity {

            .details {
                padding-right: 50px;
            }

            .unread-indicator {
                right: 34px;
            }
        }
    }

    &.has-unread-activity .details {
        padding-right: 36px;
    }
}

.board-list {

    li {
        float: left;
        width: 25%;
    }

    a {
        background-color: #999;
        color: #f6f6f6;
        height: 90px;
        margin: 0 16px 16px 0;
        font-size: 16px;
        line-height: 22px;
    }

    .details {
        height: 84px;
        padding-right: 36px;
    }

    .board-list-item-sub-name {
        color: rgba(255, 255, 255, .5);
        display: block;
        font-size: 14px;
        font-weight: 400;
        line-height: 22px;
    }

    .fade {
        background: rgba(0, 0, 0, .15);
        border-radius: 3px;
        bottom: 0;
        display: block;
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
    }

    .icon-star-active {
        color: #e6bf00;
    }

    a.unkonwn .fade,
    a.light .fade {
        background: rgba(0, 0, 0, .3);
    }

    li:hover .fade {
        background: rgba(0, 0, 0, .25);
    }

    li:hover a.unkonwn .fade,
    li:hover a.light .fade {
        background: rgba(0, 0, 0, .4);
    }

    li:hover a .fa-star-o {
        color: #fff;
        opacity: .75;

        &:hover {
            font-size: 18px;
            opacity: 1;
        }

        &.icon-star-active {
            color: #e6bf00;
            opacity: 1;

            &:hover {
                color: #ffd91a;
                font-size: 16px;
                opacity: 1;
            }
        }
    }

    li.has-unread-activity:hover .unread-indicator,
    li.starred.has-unread-activity .unread-indicator {
        right: 34px;

        .details {
            padding-right: 50px;
        }
    }
}

.sidebar-boards-list {

    a {
        height: 36px;
        padding: 0;
        margin: 0 4px 4px 0;
    }

    li.placeholder {
        background: rgba(0, 0, 0, .1);
        border-radius: 3px;
        margin: 0 4px 4px 0;
    }

    .fade {
        background: rgba(255, 255, 255, .88);
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
    }

    .details {
        margin-left: 36px;
        padding: 9px 10px;
        z-index: 2;

        &.has-sub-name {
            padding-top: 2px;
            padding-bottom: 2px;
        }
    }

    .board-list-item-name,
    .board-list-item-sub-name {
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .board-list-item-sub-name {
        color: rgba(0, 0, 0, .4);
        font-size: 12px;
        font-weight: 400;
        line-height: 12px;
    }

    .thumbnail {
        background-size: cover;
        border-top-left-radius: 3px;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 3px;
        display: block;
        height: 36px;
        left: 0;
        opacity: .7;
        position: absolute;
        top: 0;
        width: 36px;
        z-index: 2;
    }

    li.selected {

        .details {
            padding-right: 36px;
        }

        a {

            .thumbnail {
                opacity: 1;
            }

            .fade {
                background: rgba(255, 255, 255, .78);
            }

            .fa-star-o {
                color: #000;
                opacity: .3;

                &:hover {
                    font-size: 18px;
                    opacity: .7;
                }

                &.icon-star-active {
                    color: #b39500;
                    opacity: 1;

                    &:hover {
                        color: rgba(102, 85, 0, .8);
                        font-size: 16px;
                        opacity: 1;
                    }
                }
            }
        }

        &.has-unread-activity {

            .unread-indicator {
                right: 34px;
            }

            .details {
                padding-right: 50px;
            }
        }
    }

    .unread-indicator {
        background: #3394cc;
        background: linear-gradient(to bottom, #3394cc 0, #308bc0 100%);

        &.any {
            opacity: .7;
        }
    }
